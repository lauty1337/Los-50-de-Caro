---
import NavLinks from './NavLinks.astro';
import ThemeToggle from './ThemeToggle.astro';
---

<header id="header" 
    class="fixed top-0 items-center inset-x-0 w-full z-50 transition-all  border-black/10 py-2 px-3  dark:border-white/10">
    <div class="max-w-6xl  gap-x-2 sm:gap-x-4  mx-auto  flex justify-center xs:justify-between items-center">
    <a
    class="text-2xl md:text-3xl bg-gradient-to-r from-cyan-500 to-blue-500 bg-clip-text text-transparent font-bold  hover:scale-110 active:scale-90 transform duration-200 "
    href="#top">
    50!
    </a>
    <NavLinks />
    <ThemeToggle />
    </div>
</header>





<script is:inline>
    window.addEventListener('scroll', function() {
        const header = document.getElementById('header');
        if (window.scrollY > 10) {
            header.classList.add('bg-white/10','dark:bg-black/10' ,'border-b','backdrop-blur-3xl', 'shadow-lg', 'shadow-black/20');
        } else {
            header.classList.remove('bg-white/10','dark:bg-black/10','border-b', 'backdrop-blur-3xl', 'shadow-lg', 'shadow-black/20');
        }
    });
</script>

