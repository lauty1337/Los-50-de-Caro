---
import '@fontsource-variable/onest';
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
const { title = "Los 50 de Carolina Â· 7 de Febrero", description =""} = Astro.props;
---

<!doctype html>
<html lang="es" class="">
	<head>
		<meta name="description" content={description} />
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<title>{title}</title>
	</head>
	<body class="bg-white bg-[radial-gradient(60%_120%_at_50%_50%,hsla(0,0%,100%,0)_0,rgba(252,205,238,.5)_100%)] dark:bg-[radial-gradient(ellipse_70%_60%_at_50%_0%,rgba(236,72,153,0.4),transparent),linear-gradient(180deg,#0b0b1d_0%,#020617_100%)]">
		<Header />
		<main>
		<slot />
		</main>
		<Footer />
	</body>
</html>

<style>
	html, body {
		scroll-behavior: smooth;
		margin: 0;
		width: 100%;
	}
</style>



