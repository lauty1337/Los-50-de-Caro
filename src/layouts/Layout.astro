---
import '@fontsource-variable/onest';
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
const { title = "Los 50 de Carolina · 7 de Febrero", description =""} = Astro.props;
---

<!doctype html>
<html lang="es" class="">
	<head>
  <!-- Básico -->
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  	<link rel="icon" href="/img/favicon-32.png" sizes="32x32" type="image/png" />
	<link rel="icon" href="/img/favicon-16.png" sizes="16x16" type="image/png" />
	<link rel="apple-touch-icon" href="/img/apple-touch-icon.png" />


  <title>Los 50 de Caro · 6 de Febrero de 2026</title>
  <meta
    name="description"
    content="Vení a festejar los 50 de Caro con una fiesta inolvidable."
  />

  <!-- Canonical -->
  <link rel="canonical" href="https://los-50-de-caro.vercel.app/" />

  <!-- Open Graph (Facebook / WhatsApp / Discord) -->
  <meta property="og:url" content="https://los-50-de-caro.vercel.app/" />
  <meta property="og:type" content="website" />
  <meta property="og:site_name" content="Los 50 de Caro" />
  <meta property="og:locale" content="es_AR" />

  <meta property="og:title" content="Los 50 de Caro · 6 de Febrero de 2026" />
  <meta
    property="og:description"
    content="Vení a festejar los 50 de Caro con una fiesta inolvidable."
  />

  <!-- IMPORTANTE: JPG para WhatsApp -->
  <meta
    property="og:image"
    content="https://los-50-de-caro.vercel.app/img/caro-5-0-og.jpg"
  />
  <meta
    property="og:image:secure_url"
    content="https://los-50-de-caro.vercel.app/img/caro-5-0-og.jpg"
  />
  <meta property="og:image:type" content="image/jpeg" />
  <meta property="og:image:width" content="1200" />
  <meta property="og:image:height" content="630" />

  <!-- Twitter (X) -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content="Los 50 de Caro · 6 de Febrero de 2026" />
  <meta
    name="twitter:description"
    content="Vení a festejar los 50 de Caro con una fiesta inolvidable."
  />
  <meta
    name="twitter:image"
    content="https://los-50-de-caro.vercel.app/img/caro-5-0-og.jpg"
  />
</head>

	<body class="bg-white bg-[radial-gradient(60%_120%_at_50%_50%,hsla(0,0%,100%,0)_0,rgba(252,205,238,.5)_100%)] dark:bg-[radial-gradient(ellipse_70%_60%_at_50%_0%,rgba(236,72,153,0.4),transparent),linear-gradient(180deg,#0b0b1d_0%,#020617_100%)]">
		<Header />
		<main>
		<slot />
		</main>
		<Footer />
	</body>
</html>

<style>
	html, body {
		scroll-behavior: smooth;
		margin: 0;
		width: 100%;
	}
</style>



